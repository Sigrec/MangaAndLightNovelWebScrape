<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<variable name="layout" 
              value="[${environment:PROCESSOR_ARCHITECTURE}-${environment:OS}] ${longdate} | ${level:uppercase=true} > ${message:exceptionSeparator=\r\n:withException=true}"/>
	<targets>
		<!-- <target name="logfile" xsi:type="File" fileName="file.txt" /> -->
		<target  name="MasterScrapeLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/ScrapeLogs.log" deleteOldFileOnStartup="true"/>
		<target name="RightStufAnimeLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/RightStufAnimeLogs.log" deleteOldFileOnStartup="true"/>
		<target name="RobertsAnimeCornerStoreLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/RobertsAnimeCornerStoreLogs.log" deleteOldFileOnStartup="true"/>
		<target name="InStockTradesLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/InStockTradesLogs.log" deleteOldFileOnStartup="true"/>
		<target name="KinokuniyaUSALogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/KinokuniyaUSALogs.log" deleteOldFileOnStartup="true"/>
		<target name="BarnesAndNobleLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/BarnesAndNobleLogs.log" deleteOldFileOnStartup="true"/>
		<target name="BooksAMillionLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/BooksAMillionLogs.log" deleteOldFileOnStartup="true"/>
		<target name="AmazonUSALogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/AmazonUSALogs.log" deleteOldFileOnStartup="true"/>
		<target name="IndigoLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/IndigoLogs.log" deleteOldFileOnStartup="true"/>
        <target name="SciFierLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/SciFierLogs.log" deleteOldFileOnStartup="true"/>
        <target name="WaterstonesLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/WaterstonesLogs.log" deleteOldFileOnStartup="true"/>
        <target name="ForbiddenPlanetLogs" xsi:type="File" enableAnsiOutput="true" layout="${var:layout}" internalLogToConsole="true" fileName="${CurrentDir}/Logs/ForbiddenPlanetLogs.log" deleteOldFileOnStartup="true"/>
	</targets>

	<rules>
		<logger name="MasterScrapeLogs" minLevel="Debug" writeTo="MasterScrapeLogs" />
		<logger name="RightStufAnimeLogs" minLevel="Debug" writeTo="RightStufAnimeLogs" />
		<logger name="RobertsAnimeCornerStoreLogs" minLevel="Debug" writeTo="RobertsAnimeCornerStoreLogs" />
		<logger name="InStockTradesLogs" minLevel="Debug" writeTo="InStockTradesLogs" />
		<logger name="KinokuniyaUSALogs" minLevel="Debug" writeTo="KinokuniyaUSALogs" />
		<logger name="BarnesAndNobleLogs" minLevel="Debug" writeTo="BarnesAndNobleLogs" />
		<logger name="BooksAMillionLogs" minLevel="Debug" writeTo="BooksAMillionLogs" />
		<logger name="AmazonUSALogs" minLevel="Debug" writeTo="AmazonUSALogs" />
		<logger name="IndigoLogs" minLevel="Debug" writeTo="IndigoLogs" />
        <logger name="ForbiddenPlanetLogs" minLevel="Debug" writeTo="ForbiddenPlanetLogs" />
        <logger name="Waterstonesogs" minLevel="Debug" writeTo="Waterstonesogs" />
        <logger name="AmazonJapanLogs" minLevel="Debug" writeTo="AmazonJapanLogs" />
        <logger name="SciFierLogs" minLevel="Debug" writeTo="SciFierLogs" />
	</rules>
</nlog>
